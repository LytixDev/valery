stupid simple shell script expression grammar for testing purposes

-- context-free expression grammar --

program         ->      line EOF ;

line            ->      statement* ( "\n" )? ;

statement       ->      exprStmt ;

exprStmt;       ->      unary ;

unary           ->      "!" unary
                |       primary ;

primary         ->      NUMBER | STRING | "true" | "false"
                |       ( "$(" | "(" ) exprStmt; ")"                    // subshell
                |       external ;

external        ->      IDENTIFIER ;                                    // no args yet



-- simp

program         ->      line EOF ;

line            ->      unary* ( "\n" )? ;

unary           ->      "!" unary
                 |      assignment;

assignment      ->      IDENTIFIER "=" assignment
                 |      primary ;

primary         ->      NUMBER | STRING
                |       IDENTIFIER ;



-- test
pipe            -> programSequence "|" programSequence
                |  programSequence ;

programSequence -> IDENTIFIER ( PRIMARY )* ;
